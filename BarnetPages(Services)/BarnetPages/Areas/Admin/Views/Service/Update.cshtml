@model Service
@{ ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml"; }


<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <form asp-area="Admin" asp-controller="Service" asp-action="Update" method="post">
                <div class="form-group">
                    <label asp-for="@Model.Image">Image</label>
                    <input class="form-control" asp-for="@Model.Image">
                    <span asp-validation-for="@Model.Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Title">Title</label>
                    <input class="form-control" asp-for="@Model.Title">
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="@Model.SupTitle">SupTitle</label>
                    <input class="form-control" asp-for="@Model.SupTitle">
                    <span asp-validation-for="@Model.SupTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Icon">Icon</label>
                    <input class="form-control" asp-for="@Model.Icon">
                    <span asp-validation-for="@Model.Icon" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.CretedDate">CreatedDate</label>
                    <input class="form-control" asp-for="@Model.CretedDate">
                    <span asp-validation-for="@Model.CretedDate" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Update</button>
                <button type="submit" class="btn btn-dark" asp-controller="Service" asp-action="Index">Back to List</button>

            </form>
        </div>
    </div>
</div>
